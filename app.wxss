/**app.wxss**/

/** 加载动画 开始 **/
.loading {
  text-align: center;
  color: #666;
}

.loading-image {
  display: block;
  margin: 20vh auto 0;
  width: 60vw;
}
/** 加载动画 结束 **/

/** 帮助弹窗 开始 **/
.help {
  position: absolute;
  z-index: 100;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.box {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  width: 80%;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 0 25rpx rgba(22, 22, 22, 0.35);
  transform: translate3d(0, -400rpx, 0);
  top: 550rpx;
}

.box-hd {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 90rpx;
  border-bottom: 1px solid #eee;
}

.box-title {
  font-size: 40rpx;
}

.box-close {
  position: absolute;
  right: 20rpx;
  width: 40rpx;
  height: 40rpx;
  padding: 25rpx;
}

.box-bd {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 15rpx 40rpx 30rpx;
}

.help-q {
  color: #999;
  font-size: 35rpx;
  line-height: 200%;
  margin-top: 5rpx;
}

.help-a {
  font-size: 35rpx;
  text-indent: 1em;
  line-height: 160%;
  display: flex;
  flex-direction: column;
}

.help-a text {
  word-break: break-all;
}
/** 帮助弹窗 结束 **/
