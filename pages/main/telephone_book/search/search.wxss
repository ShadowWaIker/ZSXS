/* pages/main/sxh/search/search.wxss */
.main-list {
  display: flex;
  flex: 1;
  flex-flow: column nowrap;
  align-items: stretch;
}

.list-item {
  display: flex;
  margin-top: 20rpx;
  padding: 0 20rpx;
  flex-flow: column nowrap;
  align-items: stretch;
  background-color: #fff;
  font-size: 11pt;
}

.item {
  border-radius: 20rpx;
  background: #f7f7f7;
  display: flex;
  padding: 20rpx;
  padding-right: 0;
  align-items: center;
}

.item-content {
  flex: 1;
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  align-items: center;
}

.item-content-state {
  margin-left: 20rpx;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-content: flex-start;
}

.content-state-name {
  font-size: 12pt;
  line-height: 175%;
  letter-spacing: 1px;
}

.state-name-active {
  color: #8271bf;
}

.content-state-stuId {
  color: #999;
}

.main{
  margin-bottom: 20rpx;
}

.main-ending{
  display: block;
  width: 100%;
  color: #bbb;
  text-align: center;
  margin: 30rpx auto;
}

.emptyData{
margin-top: 500rpx;
text-align: center;
}