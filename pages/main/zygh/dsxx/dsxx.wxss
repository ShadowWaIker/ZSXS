.form-item{
    display: block;
    margin: 20rpx auto;
    width: 90%;
    height: 90rpx;
    border-radius: 20rpx;
    text-indent: 20rpx;
    line-height: 90rpx;
    font-size: 35rpx;
    background-color: whitesmoke;
}
.form-item-switch{
    display: block;
    float: right;
    margin-top: -4rpx;
}
.form-item-input{
    display: block;
    padding-top: 20rpx;
}
.form-item-text{
    display: block;
    float: left;
}
.btn{
    width: 90%;
    margin: 25rpx auto;
}


/* ==========================================================================
   main
 ============================================================================ */
 .main {
    display: flex;
    width: 100%;
    flex-flow: column nowrap;
    overflow: hidden;
 }
 .main-title {
    flex: 1;
    margin: 35rpx 0 25rpx -10rpx;
    text-align: center;
    font-size: 35rpx;
}
    .title-text {
        color: #999;
    }
  /* main-list
 ============================================================================ */
.main-list {
    display: flex;
    flex: 1;
    flex-flow: column nowrap;
    align-items: stretch;

}
    .list-item {
        display: flex;
        margin-bottom: 20rpx;
        padding: 0 20rpx;
        flex-flow: column nowrap;
        align-items: stretch;
        background-color: #fff;
        font-size: 11pt;
    }
  /* main-list > item
 ============================================================================ */
.item {
    border-radius: 20rpx;
    background: #f7f7f7;
    display: flex;
    padding: 20rpx;
    padding-right: 0;
    align-items: center;
}
    .item-content {
        flex: 1;
        display: flex;
        flex-flow: row nowrap;
        justify-content: flex-start;
        align-items: center;
    }
        .item-content-state {
            margin-left: 20rpx;
            display: flex;
            flex-flow: column nowrap;
            justify-content: center;
            align-content: flex-start;
        }
            .content-state-name {
                font-size: 12pt;
                line-height: 175%;
                letter-spacing: 1px;
            }
                .state-name-active {
                    color: #8271bf;
                }
            .content-state-stuId {

                color: #999;
            }