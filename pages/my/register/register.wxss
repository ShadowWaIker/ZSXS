/**about.wxss**/

.SetCreditNo {
  background: #f4f4f4;
  padding: 0;
  font-size: 11pt;
}

.header {
  position: relative;
  width: 100%;
  height: 400rpx;
  text-align: center;
  box-sizing: border-box;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.header .title {
  position: relative;
  width: 600rpx;
  height: 200rpx;
  z-index: 3;
  opacity: 0.95;
}

.black-cover {
  position: absolute;
  z-index: 2;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #888;
  opacity: 0.18;
}

.logo {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  width: 100%;
  height: 750rpx;
  border-radius: 10rpx;
  margin-top: -175rpx;
  filter: blur(15px);
}

.content {
  flex: 1;
}

.version {
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 45rpx;
  box-sizing: border-box;
  font-size: 35rpx;
  color: #666;
  border-bottom: 1px #e5e5e5 solid;
}

.version-title {
  flex: 1;
  display: flex;
  align-items: center;
}

.title-name {
  padding-right: 10rpx;
  margin: 0 auto;
}

.describe {
  width: 100%;
  height: 475rpx;
  box-sizing: border-box;
  padding: 20rpx 45rpx 30rpx;
  display: flex;
  flex-flow: column nowrap;
  color: #545454;
  line-height: 175%;
  background: #fff;
  margin-top: 5rpx;
  border-top: 1px #e5e5e5 solid;
  border-bottom: 1px #e5e5e5 solid;
}

.footer {
  display: flex;
  flex-direction: column;
  font-size: 9pt;
  line-height: 150%;
  text-align: center;
  padding: 100rpx 0 15rpx;
  color: #c2c2c2;
}

.footer-lanshan {
  font-size: 10pt;
  height: 10pt;
  line-height: 10pt;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 8rpx;
}

.footer-lanshan image {
  width: 10pt;
  height: 10pt;
  margin-right: 5rpx;
}

.warn-item {
  padding: 0 30rpx;
}

.warn-item-title {
  display: inline-block;
  color: #ff2d2d;
  font-size: 35rpx;
  margin-left: 5rpx;
}

.warn-item-content {
  color: #ff2d2d;
  display: block;
  text-indent: 40rpx;
}

.SetIdcard-item-button {
  width: 490rpx;
  margin: 0rpx auto 10rpx auto;
}

.form-item{
    display: block;
    margin: 20rpx auto;
    width: 90%;
    height: 90rpx;
    border-radius: 20rpx;
    text-indent: 20rpx;
    line-height: 90rpx;
    font-size: 35rpx;
    background-color: whitesmoke;
}

.form-item-text{
    display: block;
    float: left;
}

.form-item-input{
    display: block;
    padding-top: 20rpx;
}